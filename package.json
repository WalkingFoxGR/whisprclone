{
  "name": "voxpilot",
  "version": "1.4.0",
  "description": "VoxPilot - AI-powered voice-to-text desktop app",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "compile:native": "swiftc resources/globe-key-listener.swift -o resources/globe-key-listener -framework Cocoa -framework CoreGraphics",
    "lint": "eslint src/ --ext .ts,.tsx",
    "format": "prettier --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "sign:mac": "codesign --force --sign - dist/mac-arm64/VoxPilot.app/Contents/Resources/globe-key-listener && find dist/mac-arm64/VoxPilot.app -name '*.node' -exec codesign --force --sign - {} \\; && codesign --force --sign - --identifier com.voxpilot.app dist/mac-arm64/VoxPilot.app/Contents/MacOS/VoxPilot && codesign --force --sign - --identifier com.voxpilot.app dist/mac-arm64/VoxPilot.app",
    "pack:mac": "npm run compile:native && electron-vite build && electron-builder --mac && npm run sign:mac",
    "pack:win": "electron-vite build && electron-builder --win",
    "release:mac": "npm run compile:native && electron-vite build && electron-builder --mac --publish always"
  },
  "build": {
    "appId": "com.voxpilot.app",
    "productName": "VoxPilot",
    "afterPack": "./build/afterPack.cjs",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "WalkingFoxGR",
      "repo": "whisprclone"
    },
    "files": [
      "out/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extraResources": [
        {
          "from": "resources/globe-key-listener",
          "to": "globe-key-listener"
        }
      ],
      "extendInfo": {
        "NSMicrophoneUsageDescription": "VoxPilot needs microphone access to record your voice for transcription.",
        "NSAppleEventsUsageDescription": "VoxPilot needs accessibility access to paste transcribed text into your active application."
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "voice",
    "dictation",
    "ai",
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "better-sqlite3": "^11.10.0",
    "clsx": "^2.1.1",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.563.0",
    "openai": "^4.104.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.4.0",
    "uiohook-napi": "^1.5.4",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^10.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  }
}
